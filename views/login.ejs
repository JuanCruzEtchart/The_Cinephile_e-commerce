<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <%- include("./partials/header") %>
    <main id="main">
      <div class="formulario">
        <form action="/login" method="post" class="form-login" id="form1">
          <div class="cruzA">
            <i class="fas fa-window-close" class="cruzicono"></i>
          </div>
          <h1 class="conectate" style="color: white">Conectate</h1>
          <div class="email-contraseña">
            <i class="fas fa-envelope"></i>
            <p style="color: white" class="email-lerta">Email</p>
          </div>
          <div id="emailbloque">
            <input
              type="email"
              id="email"
              name="email"
              placeholder="TuEmail@Cinephile.com"
              class="mail"
              required
            />
          </div>
          <div class="email-contraseña">
            <i class="fas fa-lock"></i>
            <div class="email-box"><p style="color: white">Contraseña</p></div>
          </div>
          <div id="passwordbloque">
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Contraseña"
              class="text-box"
              required
            />
          </div>
          <div class="div-edit">
            <a href="/"
              ><button type="submit" class="send-button">Conectarse</button></a
            >
          </div>
          <div id="checkboxBox">
            <input type="checkbox" id="checkbox" />
            <p id="quedarseConectado" style="color: white">
              Quedarme conectado.
            </p>
          </div>
          <p id="contraseña" style="color">¿Olvidaste tu contraseña?</p>
        </form>
      </div>
    </main>
    <%- include("./partials/footer") %>
  </body>
</html>
