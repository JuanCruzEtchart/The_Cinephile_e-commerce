<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
  <link rel="stylesheet" href="/css/index.css" />
  <link rel="stylesheet" href="/css/products/moviesSeriesList.css" />
</head>

<body>
  <%- include("./partials/header") %>
  <main>
    <section class="img_main">
      <div class="conjunto">
        <a href="/product/detail/<%= lastProduct.id %>">
          <img src="/images/products/productsCreated/<%= lastProduct.background_image %>" alt="imagenprincipal">
        </a>
        <h3 class="main__last-realease">Último lanzamiento</h3>
      </div>
    </section>
    <h3 class="text1">Películas</h3>
    <section class="products">

      <section class="main__product-list">
        <div class="main__slider">
          <div class="main__slider-inner">
            <% movies.forEach(element => { %>
            <article class="main__product-article">
              <a href="/product/detail/<%= element.id %>">
                <div class="main__img-container">
                  <img src="/images/products/productsCreated/<%= element.product_image ? element.product_image : "Logo.png"%>" alt="Imágen de producto">
                </div>
                <div class="main__product-name"><%= element.name %> </div>
              </a>
            </article>
            <% }) %>
          </div>
        </div>
      </section>
    </section>
    <h3 class="text2">Series</h3>
    <section class="products">

      <section class="main__product-list">
        <div class="main__slider">
          <div class="main__slider-inner">
            <% series.forEach(element => { %>
            <article class="main__product-article">
              <a href="/product/detail/<%= element.id %>">
                <div class="main__img-container">
                  <img src="/images/products/productsCreated/<%= element.product_image ? element.product_image : "Logo.png"%>" alt="Imágen de producto">
                </div>
                <div class="main__product-name"><%= element.name %> </div>
              </a>
            </article>
            <% }) %>
          </div>
        </div>
      </section>
  </main>
  <%- include("./partials/footer") %>
</body>

</html>