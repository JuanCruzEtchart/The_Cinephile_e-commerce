<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
  <link rel="stylesheet" href="/css/login copy.css" />
</head>

<body>
  <%- include("./partials/header") %>
  <main id="main">
    <div class="formulario">
      <form action="/user/login" method="POST" class="form-login" id="form1">
        <div class="cruzA">
          <a href="http://localhost:3030/"> <i class="fas fa-window-close" class="cruzicono"></i> </a>
        </div>
        <h1 class="conectate" style="color: white">Conectate</h1>
        <div class="email-contraseña">
          <i class="fas fa-envelope"></i>
          <p style="color: white" class="email-lerta">Email</p>
        </div>
        <div id="emailbloque">
          <input type="email" id="email" name="email" placeholder="TuEmail@Cinephile.com" class="mail" />
        </div>
        <div class="email-contraseña">
          <i class="fas fa-lock"></i>
          <div class="email-box">
            <p style="color: white">Contraseña</p>
          </div>
        </div>
        <div id="passwordbloque">
          <input type="password" id="password" name="password" placeholder="Contraseña" class="text-box" />
        </div>
        <input class="div-edit" type="submit" value="Conectarse" style="background-color: #ffc700; border: none;">

        <div id="olvidaste">
          <a style="text-decoration: none" href="/user/register">
            <p id="contraseña">Crear cuenta nueva </p>
          </a>
        </div>
        <div id="checkboxBox">
          <input type="checkbox" name="checkbox" id="checkbox" />
          <p id="quedarseConectado" style="color: white">
            Quedarme conectado.
          </p>
        </div>
        <div class="errorDiv">
          <% if (locals.errors && locals.errors.email) { %>
          <p class="msg-error"> <%= errors.email.msg %> </p>
          <% } %>
        </div>

        <div class="errorDiv">
          <% if (locals.errors && locals.errors.password) { %>
          <p class="msg-error"> <%= errors.password.msg %> </p>
          <% } %>
        </div>

        <div class="errorlogin">
          <% if(locals.errorLogin) { %>
          <p> <%=errorLogin %> </p>
          <% } %>
        </div>

        <% if (locals.errors) { %>
        <ul class="errorDiv">
          <% errors.forEach(element => { %>
          <li class="msg-error">
            <%= element.msg %>
          </li>
          <% }) %>
        </ul>
        <% } %>

      </form>
    </div>
  </main>
  <%- include("./partials/footer") %>
</body>

</html>